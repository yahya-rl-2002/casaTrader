# Fear & Greed Index - Configuration
# Copiez ce fichier vers .env et remplissez les valeurs

# Environment
ENVIRONMENT=development

# Database
DATABASE_URL=sqlite:///./fear_greed.db
# Pour PostgreSQL: DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# TimescaleDB (optionnel)
TIMESCALE_ENABLED=false

# Scheduler
SCHEDULER_TIMEZONE=Africa/Casablanca
SCHEDULER_DAILY_RUN=16:00

# Security - ⚠️  CHANGEZ EN PRODUCTION !
SECRET_KEY=change-me-in-production-please-use-a-strong-random-secret-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# OpenAI API (optionnel, pour LLM sentiment analysis)
OPENAI_API_KEY=sk-proj-...

# Supabase (optionnel)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# Redis (optionnel, fallback en mémoire si non configuré)
REDIS_URL=redis://localhost:6379/0
